<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edita la pregunta</h3>
        </div>
        <div class="card-body">
            <form action="/questions/edit/{{question._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <textarea name="question" class="form-control">{{question.question}}</textarea>
                </div>
                <div class="form-group">
                    <input type="text" name="solution" class="form-control" value="{{question.solution}}">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">GUARDAR</button>
                </div>
            </form>            
        </div>
    </div>
</div>